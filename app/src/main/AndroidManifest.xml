<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.ac.polban.birokrasi.ebirokrasi">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AddMahasiswaActivity"
            android:label="@string/title_activity_add_mahasiswa"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.ac.polban.birokrasi.ebirokrasi.MainActivity" />
        </activity>
        <activity
            android:name=".EditMahasiswaActivity"
            android:label="@string/title_activity_edit_mahasiswa_activiy"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.ac.polban.birokrasi.ebirokrasi.MainActivity" />
        </activity>
        <activity
            android:name=".DelMahasiswaActivity"
            android:label="@string/title_activity_del_mahasiswa"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="id.ac.polban.birokrasi.ebirokrasi.MainActivity" />
        </activity>
    </application>

</manifest>